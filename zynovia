  <script>
    // Smooth scroll (يدعم RTL)
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', e=>{
        const id = a.getAttribute('href').slice(1);
        const el = document.getElementById(id);
        if(el){ e.preventDefault(); el.scrollIntoView({behavior:'smooth', block:'start'}); }
      });
    });

    // 3D tilt for cards
    const tilts = document.querySelectorAll('.tilt');
    tilts.forEach(card=>{
      card.addEventListener('mousemove', (e)=>{
        const r = card.getBoundingClientRect();
        const x = (e.clientX - r.left) / r.width; // 0..1
        const y = (e.clientY - r.top) / r.height;
        const rx = (y - .5) * -12; // tilt X
        const ry = (x - .5) * 12;  // tilt Y
        card.style.transform = `perspective(900px) rotateX(${rx}deg) rotateY(${ry}deg)`;
      });
      card.addEventListener('mouseleave', ()=> card.style.transform = 'perspective(900px) rotateX(0) rotateY(0)');
    });

    // Portfolio state
    const state = { items: [] };
    const gallery = document.getElementById('gallery');

    function render(){
      gallery.innerHTML = '';
      if(state.items.length === 0){
        const empty = document.createElement('div');
        empty.className = 'card';
        empty.innerHTML = '<p class="muted">لا توجد أعمال حتى الآن. أضف ملفات صور/فيديو ثم اضغط "إضافة إلى المعرض".</p>';
        gallery.appendChild(empty);
        return;
      }
      state.items.forEach((it, idx)=>{
        const card = document.createElement('article');
        card.className = 'work tilt';
        const media = it.type.startsWith('video/')
          ? `<video src="${it.src}" controls playsinline></video>`
          : `<img src="${it.src}" alt="${it.title || 'عمل'}" loading="lazy"/>`;
        card.innerHTML = `
          ${media}
          <div class="meta">
            <h4>${it.title || 'عمل بدون عنوان'}</h4>
            <p>${it.desc || ''}</p>
            ${it.tag ? `<span class="chip">${it.tag}</span>` : ''}
          </div>`;
        // simple remove on dblclick
        card.title = 'نقرتان للحذف';
        card.addEventListener('dblclick', ()=>{ if(confirm('حذف هذا العمل؟')){ state.items.splice(idx,1); render(); }});
        gallery.appendChild(card);
      });
    }

    // Add items from input
    const fileInput = document.getElementById('fileInput');
    const addBtn = document.getElementById('addBtn');
    const titleEl = document.getElementById('workTitle');
    const descEl = document.getElementById('workDesc');
    const tagEl = document.getElementById('workTag');

    addBtn.addEventListener('click', async ()=>{
      const files = Array.from(fileInput.files || []);
      if(files.length === 0){ alert('اختر ملفات صور/فيديو أولاً'); return; }
      for(const f of files){
        const src = await readAsDataURL(f); // يحفظ داخل JSON كـ base64
        state.items.push({
          title: titleEl.value.trim(),
          desc: descEl.value.trim(),
          tag: tagEl.value.trim(),
          type: f.type,
          src
        });
      }
      // تفريغ المدخلات
      fileInput.value = '';
      render();
    });

    function readAsDataURL(file){
      return new Promise((res, rej)=>{
        const reader = new FileReader();
        reader.onload = ()=> res(reader.result);
        reader.onerror = rej;
        reader.readAsDataURL(file);
      });
    }

    // Export JSON
    document.getElementById('exportBtn').addEventListener('click', ()=>{
      const data = { version:1, generatedAt: new Date().toISOString(), items: state.items };
      const blob = new Blob([JSON.stringify(data, null, 2)], {type:'application/json'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url; a.download = 'portfolio.json'; a.click();
      URL.revokeObjectURL(url);
    });

    // Import JSON
    const importInput = document.getElementById('importInput');
    importInput.addEventListener('change', async ()=>{
      const f = importInput.files[0];
      if(!f) return;
      try{
        const text = await f.text();
        const data = JSON.parse(text);
        if(Array.isArray(data.items)){
          state.items = data.items; render();
        }else{ alert('ملف غير صالح'); }
      }catch(err){ alert('تعذر قراءة الملف'); }
      importInput.value = '';
    });

    // Try auto-load portfolio.json if available next to index.html
    (async function tryLoad(){
      try{
        const r = await fetch('portfolio.json', {cache:'no-store'});
        if(r.ok){ const data = await r.json(); if(Array.isArray(data.items)){ state.items = data.items; render(); } }
        else{ render(); }
      }catch{ render(); }
    })();

    // Footer year
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
</body>
</html>
